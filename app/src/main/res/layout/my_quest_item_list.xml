<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#14ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_ans_item_tv_nik"
                    android:textSize="18dp"
                    android:textColor="#b0a06e" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="просмотренно"
                android:id="@+id/my_ans_item_tv_read"
                android:textColor="#2c2222"
                android:textSize="15dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="тема: "
                android:textSize="14dp"
                android:gravity="left|center_vertical"
                android:textColor="#bcbcbc"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_ans_item_tv_them"
                android:textSize="14dp"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical"
                android:textColor="#ffffff"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/my_ans_item_tv_text"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
                android:maxLength="60"
                android:singleLine="true"

                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_weight="0.2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/my_ans_item_tv_date"
                android:layout_gravity="center_vertical"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_weight="0.8"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>